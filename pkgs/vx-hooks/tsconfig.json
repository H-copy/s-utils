{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "types",
    "sourceMap": false,
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "allowJs": false,
    "strict": true,
    "noUnusedLocals": true,
    "experimentalDecorators": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "removeComments": false,
    "declaration": true,
    "declarationMap": false, 
    "declarationDir": "types",
    "lib": ["esnext", "dom"],
    "types": ["node", "jest", "dom"]
  },
  "include": [
    "src/*"
  ],
  "exclude": [
    "node_modules",
    "lib"    
  ]
}